<% layout("/layouts/boilerplate.ejs") %>

<body>
  <div class="container my-5">
    <h2 class="text-center mb-4">Create New Listing</h2>

    <form action="/listings" method="post" enctype="multipart/form-data" class="card p-4 shadow-sm">
      
      <div class="mb-3">
        <input type="text" 
               name="listing[title]" 
               placeholder="Enter property name" 
               required 
               class="form-control">
      </div>

      <div class="mb-3">
        <input type="text" 
               name="listing[description]" 
               placeholder="Enter property description" 
               required 
               class="form-control">
      </div>

      <div class="mb-3">
        <input type="number" 
               name="listing[price]" 
               placeholder="Enter property price" 
               required 
               class="form-control">
      </div>

      <div class="mb-3">
        <input type="text" 
               name="listing[location]" 
               placeholder="Enter property location" 
               required 
               class="form-control">
      </div>

      <div class="mb-3">
        <input type="text" 
               name="listing[country]" 
               placeholder="Enter country name" 
               required 
               class="form-control">
      </div>

      <div class="mb-3">
        <input type="file" 
               name="listing[image]" 
               class="form-control">
      </div>

      <button class="btn btn-success w-100">Add Listing</button>
    </form>
  </div>
</body>

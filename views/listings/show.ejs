<% layout("/layouts/boilerplate.ejs") %>

<body>
  <div class="container my-5">

    <!-- Property Split Layout -->
    <div class="row g-4 align-items-start property-wrapper mb-5">
      <!-- Image (50%) -->
      <div class="col-lg-6 col-md-12">
        <div class="image-wrapper">
          <img src="<%= listing.image.url %>" 
               class="property-img" 
               alt="<%= listing.title %>">
          <span class="price-badge">‚Çπ <%= listing.price.toLocaleString("en-IN") %> /-</span>
        </div>
      </div>

      <!-- Details (50%) -->
      <div class="col-lg-6 col-md-12">
        <div class="property-details card shadow-sm p-4">
          <h2 class="fw-bold mb-3"><%= listing.title %></h2>
          <p class="text-muted mb-4"><%= listing.description %></p>

          <ul class="list-group list-group-flush mb-3">
            <li class="list-group-item"><strong>üë§ Owned By:</strong> <%= listing.owner.username %></li>
            <li class="list-group-item"><strong>üìç Location:</strong> <%= listing.location %>, <%= listing.country %></li>
          </ul>

          <% if(currUser && listing.owner._id.equals(currUser._id)) { %>
            <div class="d-flex gap-2 mt-3">
              <a href="/listings/<%= listing._id %>/edit" class="btn btn-warning btn-sm">‚úèÔ∏è Edit</a>
              <form action="/listings/<%= listing._id %>?_method=DELETE" method="post">
                <button class="btn btn-danger btn-sm">üóëÔ∏è Delete</button>
              </form>
            </div>
          <% } %>
        </div>
      </div>
    </div>

    <!-- Reviews Section -->
    <div class="reviews-section">
      <h3 class="mb-4 fw-bold text-secondary">‚≠ê Reviews</h3>

      <% if(currUser) { %>
        <div class="card p-4 mb-4 shadow-sm review-form">
          <h5 class="mb-3">Write a Review</h5>
          <form action="/listings/<%= listing._id %>/reviews" method="post">
            <div class="mb-3">
              <label class="form-label fw-semibold">Enter Rating (1‚Äì5)</label>
              <input type="number" name="review[rating]" min="1" max="5" required class="form-control">
            </div>
            <div class="mb-3">
              <label class="form-label fw-semibold">Your Review</label>
              <textarea name="review[comments]" rows="3" required class="form-control"></textarea>
            </div>
            <button class="btn btn-primary w-100">Submit Review</button>
          </form>
        </div>
      <% } %>

      <% if(listing.reviews.length === 0) { %>
        <p class="text-muted">No reviews yet. Be the first to review!</p>
      <% } %>

      <% for(let review of listing.reviews) { %>
        <div class="card mb-3 shadow-sm review-card">
          <div class="card-body">
            <h6 class="fw-bold"><%= review.author.username %></h6>
            <p>
              <% for(let i=1; i<=5; i++) { %>
                <i class="fa-star <%= i <= review.rating ? 'fa-solid text-warning' : 'fa-regular text-muted' %>"></i>
              <% } %>
            </p>
            <p class="text-muted"><%= review.comments %></p>

            <% if(currUser && currUser._id.equals(review.author._id)) { %>
              <form action="/listings/<%= listing._id %>/reviews/<%= review._id %>?_method=DELETE" method="post">
                <button class="btn btn-sm btn-outline-danger">Delete</button>
              </form>
            <% } %>
          </div>
        </div>
      <% } %>
    </div>
  </div>
</body>


<% layout("/layouts/boilerplate.ejs") %>

  <body class="d-flex justify-content-center my-5">
    <div class="container" style="max-width: 600px;">
      <h5 class="text-center mb-4">
        You are updating details of property titled "<%= listing.title %>"
      </h5>

      <div class="card shadow-sm p-4">
        <form action="/listings/<%= listing._id %>?_method=PUT" method="post">

          <div class="mb-3">
            <label class="form-label">Property Title</label>
            <input type="text" name="listing[title]" value="<%= listing.title %>" class="form-control"
              placeholder="Enter property title" required>
          </div>

          <div class="mb-3">
            <label class="form-label">Description</label>
            <textarea name="listing[description]" class="form-control" rows="3" placeholder="Enter property description"
              required><%= listing.description %></textarea>
          </div>

          <div class="mb-3">
            <label class="form-label">Price (â‚¹)</label>
            <input type="number" name="listing[price]" value="<%= listing.price %>" class="form-control"
              placeholder="Enter property price" required>
          </div>

          <div class="mb-3">
            <label class="form-label">Location</label>
            <input type="text" name="listing[location]" value="<%= listing.location %>" class="form-control"
              placeholder="Enter property location" required>
          </div>

          <div class="mb-3">
            <label class="form-label">Country</label>
            <input type="text" name="listing[country]" value="<%= listing.country %>" class="form-control"
              placeholder="Enter country name" required>
          </div>

          <div class="d-flex gap-2">
            <button class="btn btn-primary flex-fill">Update Listing</button>
            <a href="/listings/<%= listing._id %>" class="btn btn-secondary flex-fill">Cancel</a>
          </div>

        </form>
      </div>
    </div>
  </body>